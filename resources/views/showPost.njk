{% extends 'master' %}

{% block content %}
  <div class="post">
    <div>
      <a href="/">  Go Back </a>
    </div>
    <hr>
    <h2>{{ post.title }}</h2>
    <p>{{ post.content }}</p>
    <hr>
    <a href="/edit/{{post.id}}" class="btn btn-warning">Edit Post</a>
    <a href="/delete/{{post.id}}" class="btn btn-danger">Delete Post</a>
  </div>
{% endblock %}
