{% extends 'master' %}

{% block content %}
<div>
  <p>
    Below is the list of all the awesome posts created by all of us. You can also
    contribute by clicking the below button.
  </p>
  {% if not currentUser %}
  <a href="/login" class="btn btn-info"> Please login to post an article >></a>
  {% else %}
  <a href="posts/create" class="btn btn-success btn-block"> Create New Post </a>
  {% endif %}
  <hr>
</div>
  <div class="posts-wrapper">
    {% for post in posts %}
      <div class="post">
        <h2><a href="posts/{{ post.id }}"> {{ post.title }} </a></h2>
        <p> {{ post.content | truncate(150) }} </p>
      </div>
    {% else %}
        <h2> No posts found </h2>
    {% endfor %}
  </div>
{% endblock %}
